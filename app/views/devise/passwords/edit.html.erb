<h2>Cambiar contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="text-field">
    <div class="form-group">
      <%= f.label :password, "Nueva contraseña (6 caracteres mínimo)" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="text-field">
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirma contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar contraseña", class: 'btn btn-primary' %>
  </div>
<% end %>