<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<% if @books.count >= 1 %>
  <table class="pretty">
    <thead>
      <tr>
        <th><%= sortable "email", "Email" %></th>
        <th><%= sortable "start_time", "Fecha y hora" %></th>
        <th><%= sortable "diners", "Comensales" %></th>
        <th><%= sortable "state", "Estado" %></th>
        <th><%= sortable "optional_charge_cents", "Cargo" %></th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.email %></td>
          <td><%= book.start_time %></td>
          <td><%= book.diners %></td>
          <td><%= state_book(book) %></td>
          <td><%= charge_book(book) %></td>
          <td><%= link_to 'Detalles', book %></td>
          <td><%= link_to 'Editar', edit_book_path(book) %></td>
          <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: '¿Eliminar reserva?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div>¡No hay reservas!</div>
<% end %>

<p>
  <%= link_to 'Nueva reserva', new_book_path %> | 
  <%= link_to 'Volver a la Página Principal', root_path %>
</p>