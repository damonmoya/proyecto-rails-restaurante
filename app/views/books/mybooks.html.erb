<% content_for :head do %>
    <title>Mi restaurante - Reservas de <%= @email %></title>
<% end %>

<h1>Reservas (<%= @email %>) </h1>

<% if @books.count >= 1 %>
  <table class="pretty table">
    <thead class="table-dark">
      <div class="mt-2 mt-md-0 mb-3 d-flex justify-content-center">
        <div class="flickr_pagination">
          <%= will_paginate @books %>
        </div>
      </div>
      <tr>
        <th><%= sortable_mybooks "id", "ID" %></th>
        <th><%= sortable_mybooks "start_time", "Fecha y hora" %></th>
        <th><%= sortable_mybooks "diners", "Comensales" %></th>
        <th><%= sortable_mybooks "state", "Estado" %></th>
        <th><%= sortable_mybooks "optional_charge_cents", "Cargo" %></th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.start_time %></td>
          <td><%= book.diners %></td>
          <td><%= state_book(book) %></td>
          <td><%= charge_book(book) %></td>
          <% if ((book.start_time.to_i - @date_now)) >= @grace_time && book.charge == nil %>
            <td><%= link_to 'Cancelar reserva', book, method: :delete, data: { confirm: 'Cancelar reserva?' } %></td>
          <% else %>
            <td>No hay acciones disponibles</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div>¡No hay reservas!</div>
<% end %>

<%= link_to 'Volver a sección de reservas', books_path, class: "btn btn-secondary" %>